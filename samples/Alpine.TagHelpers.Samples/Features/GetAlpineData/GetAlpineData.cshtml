@using Tailwind.Heroicons
@{
  ViewBag.Title = "Alpine Data";
  Layout = "_Layout";
}

<h1 class="text-2xl font-semibold">Alpine Data</h1>

<div class="text-gray-500 py-2">A TagHelper that converts your C# object to a JavaScript object.</div>

<div class="flex flex-col space-y-2">

  <h3 class="text-md text-gray-700 font-semibold">Default behaviour</h3>

  <div class="relative z-20 flex items-center justify-center w-1/2 pb-4">
    <div class="relative w-full bg-white border rounded-md border-neutral-200">
      <div class="min-h-[250px] rounded-md w-full sm:p-10 p-4 box-border flex items-center justify-center">
          <div alpine-data="new { Open = false }">
            <button class="bg-blue-500 text-white px-4 py-2 rounded"
                    x-on:click="open = !open">
              Show
            </button>
            <div x-cloak
                 x-show="open">
              Some details...
            </div>
          </div>

      </div>
    </div>
  </div>

  
</div>
